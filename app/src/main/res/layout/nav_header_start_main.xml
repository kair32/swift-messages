<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:id="@+id/nav_headler_start_main_liner">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/side_nav_bar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/nav_headler_start_main_image_view" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/header_account_image_view"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_account_circle_black_36dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/header_name_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textColor="@android:color/white"
        android:text="Android Studio"
        android:textAppearance="@android:style/TextAppearance.Material.Body2"
        android:layout_below="@+id/header_account_image_view"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp" />


</RelativeLayout>
